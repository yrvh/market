<view class="store">
  <view class="store-shop">
    <view>
      <image src="/assets/icon/goodsShop.png" class="store-shop-icon"/> {{storeName}} >
    </view>
    <slot name="payStatus"/>
  </view>
  <!-- 引入商品组件 -->
  <goods-list imgUrl="{{imgUrl}}" 
              goodsText="{{goodsText}}" 
              goodsPrice="{{goodsPrice}}">
    <view class="store-num">x{{goodsNum}}</view>
  </goods-list>
  <slot name="afterMarket"/>
</view>
