<view class="createAddr">
  <message-frame message-frame-style="message-frame-style">
    <view slot="leftIcon" class="createAddr-consignee">收货人</view>
    <input slot="topIcon" class="createAddr-input" placeholder="请输入收货人姓名"></input> 
  </message-frame>

  <message-frame message-frame-style="message-frame-style">
    <view slot="leftIcon" class="createAddr-consignee">联系方式</view>
    <input slot="topIcon" class="createAddr-input" placeholder="请输入手机号码"></input>
  </message-frame>

  <message-frame message-frame-style="message-frame-style">
    <view slot="leftIcon" class="createAddr-consignee">所在地区</view>
    <input slot="topIcon" class="createAddr-input" placeholder="请选择收货地区"></input>
  </message-frame>

  <message-frame message-frame-style="message-frame-style">
    <view slot="leftIcon" class="createAddr-consignee">详细地址</view>
    <input slot="topIcon" class="createAddr-input" placeholder="请输入详细地址"></input>
  </message-frame>
</view>

<message-frame title="设为默认地址" message-frame-style="message-frame-styleDef">
    <switch slot="rightIcon"
            checked="true"
            disabled="false"
            type="switch"
            color="#fde312"
            bindchange="handleChangeDefault">
    </switch>
</message-frame>
