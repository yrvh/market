<view class="orderDetail">
  <pay-status statusIcon="{{statusIcon}}" statusTitle="{{statusTitle}}" statusMessage="{{statusMessage}}"/>
  <logistics logisticsMessage="{{logisticsMessage}}" logisticsDate="{{logisticsDate}}"></logistics>

  <tel-address telName="{{telName}}" telAddress="{{telAddress}}" telNum="{{telNum}}">
    <view class="orderDetail-address-icon" slot="leftIcon">
      <image src="/assets/icon/location.png" class="orderDetail-address-icon-img"></image>
    </view>
  </tel-address>

  <view class="orderDetail-item">
    <store  imgUrl="{{imgUrl}}"
          storeName="{{storeName}}" 
          goodsText="{{goodsText}}" 
          goodsPrice="{{goodsPrice}}"
          goodsNum="{{goodsNum}}">
    </store>

    <message-frame title="运费 (快递)" message-frame-style="message-frame-style">
      <view slot="rightIcon" class="orderDetail-item-freight">¥ 8.00元</view>
    </message-frame>
    <message-frame title="订单总价" message-frame-style="message-frame-style">
      <view slot="rightIcon" class="orderDetail-item-total">¥ 16.00元</view>
    </message-frame>
    <message-frame title="实付款" message-frame-style="message-frame-style">
      <view slot="rightIcon" class="orderDetail-item-payment">¥ 16.00元</view>
    </message-frame>
  </view>

  <order-information>
  </order-information>

  <order-tabbar></order-tabbar>
</view>